 #!/bin/bash
cd "$(dirname "$0")"
# Install requirements
echo
echo "- Installing the requirements"
./Python310/bin/python3 -m pip install --upgrade pip --no-cache-dir --trusted-host http://mirrors.aliyun.com/pypi/simple/
./Python310/bin/python3 -m pip install -r ./requirements-mps.txt --no-cache-dir --trusted-host http://mirrors.aliyun.com/pypi/simple/
./Python310/bin/python3 -m pip install -r ./requirements.txt --no-cache-dir --trusted-host http://mirrors.aliyun.com/pypi/simple/
if [ $? -ne 0 ]; then
    echo "Failed to install requirements"
    read -p "Press enter to exit..."
    exit 1
fi

echo "Python environment deployed successfully."
read -p "You can close this terminal window to exit..."
exit